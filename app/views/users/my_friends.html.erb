<h1>Friends</h1>

<div class = "search-area">
    <h3>Search Friends</h3>
    <%= form_with  url: search_friend_path,method: :get,local: false do |f| %>
        <div class = 'form-group row'>
            <div class = "col-sm-9 no-right-padding">
                <%= f.text_field :friend ,placeholder: "Name or Email",autofocus: true, class: "form-control form-control-lg" %>
            </div>
            <div class = "col-sm-3 no-left-padding" >
               <%= f.button type: :submit, class: " submit btn btn-success" do %>
                    <%= fa_icon 'search 2x' %>
                <% end %>
            <div>
        </div>
    <% end %>

</div>

<div id = "friend_result">
</div>

<% if !@friends.empty? %>
    <%= render 'friends/list' %>

<% end %>
